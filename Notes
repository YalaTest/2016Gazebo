// add (shared) library path to env variable
// PLUGIN
export GAZEBO_PLUGIN_PATH=${GAZEBO_PLUGIN_PATH}:~/Gazebo/gazebo_plugin_tutorial/build
// MODEL
export GAZEBO_MODEL_PATH=$HOME/Gazebo/gazebo_plugin_tutorial/models:$GAZEBO_MODEL_PATH

// using a plugin, hello.world contains plugin info
gzserver ~/gazebo_plugin_tutorial/hello.world --verbose

